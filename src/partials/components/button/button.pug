mixin button({text, style, isDisabled= false})
  -
    const styles = {
      fill: "fill",
      border: "border",
      text: "text",
      arrow: "arrow",
    }

  -
    const classes = [
      `btn`,
      `btn__${styles[style]}`,
      `btn_disabled_${isDisabled}`,
      `btn__${styles[style]}_disabled_${isDisabled}`,
    ]
  button(class= [...classes])
    span= text
