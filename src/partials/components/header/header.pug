include ../logo/logo
include ../button/button
include ../menu-link/menu-link

mixin header(username= false)
  header.header
    .header__container.container
      .header__logo
        +logo

      .header__menu
        nav.header__nav
          ul.header__list
            li.header__item
              +menu-link({text: 'О нас'})
            li.header__item
              +menu-link({text: 'Услуги', arrow: true})
            li.header__item
              +menu-link({text: 'Вакансии'})
            li.header__item
              +menu-link({text: 'Новости'})
            li.header__item
              +menu-link({text: 'Соглашения', arrow: true})
        if username
          .header__user
            +menu-link({text: username})
        else
          .header__btns
            .header__login
              +button({text: 'войти', style: 'border', link: './user-login.html'})
            .header__registration
              +button({text: 'зарегистрироваться', style: 'fill', link: './user-registration.html'})

      button.header__burger
        span.header__burger-line
