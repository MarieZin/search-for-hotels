include ../like-button/like-button

mixin comment({imgPath, name, date, countLike, isLike, text})
  .comment
    .comment__img
      img(src= imgPath, alt="Фото комментатора")
    .comment__title
      p.comment__name= name
      p.comment__time= date
    .comment__like
      +like-button({countLike: countLike, isLike: isLike})
    p.comment__text= text
