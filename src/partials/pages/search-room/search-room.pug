      .search-room__settings
        .search-room__dates-of-stay
          +filter-date-dropdown({title: 'даты пребывания в отеле', initialText: '19 авг - 23 авг', identifier: 'search-room'})
        .search-room__guests
          -
            const guestSettings = {
              title: 'гости',
              buttonText: '3 гостя, 1 младенец',
              isOpen: false,
              hasButtons: false,
              typeDropdown: 'people',
              values: [3, 0, 1],
            }
          +dropdown(guestSettings)
        .search-room__price-range
          .search-room__price-range-slider
            -
              const costsDiapazon = {
                title: 'диапазон цены',
                min: "550", max: "15350",
                start: "5000", end: "10000"
              }
            +range-slider(costsDiapazon)
          p.search-room__price-range-description
            |Стоимость за сутки пребывания в номере
        .search-room__house-rules
          -
            const houseRules = [
              {text: 'Можно курить', isChecked: false},
              {text: 'Можно с питомцами', isChecked: true},
              {text: 'Можно пригласить гостей (до 10 человек)', isChecked: true},
            ]
          +checkbox-btns('правила дома', houseRules)
        .search-room__availability
